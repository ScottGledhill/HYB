<project name="chinaacceleratorservices_buildcallbacks">
	<macrodef name="chinaacceleratorservices_after_build">
		<sequential>
			<impexGenerate extname="chinaacceleratorservices"/>
		</sequential>
	</macrodef>

	<macrodef name="chinaacceleratorservices_after_clean">
		<sequential>
			<delete failonerror="false" file="${ext.chinaacceleratorservices.path}/resources-lang/touch_impexgen"/>
		</sequential>
	</macrodef>
	
    <macrodef name="chinaacceleratorservices_after_dist_copy">
        <sequential>
            <copy todir="${destination.folder}/../installer/recipes" preservelastmodified="true">
                <fileset dir="${ext.chinaacceleratorservices.path}/../installer/recipes/"/>
            </copy>
            <if>
                <istrue value="${dist.development.dist}"/>
                <then>
                    <copy todir="${destination.develop.folder}/../installer/recipes" preservelastmodified="true">
                        <fileset dir="${ext.chinaacceleratorservices.path}/../installer/recipes/"/>
                    </copy>
                </then>
            </if>
        </sequential>
    </macrodef>
</project>
