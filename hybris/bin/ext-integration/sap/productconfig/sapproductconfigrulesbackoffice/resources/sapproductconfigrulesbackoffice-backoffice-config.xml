<config xmlns="http://www.hybris.com/cockpit/config">

	<!-- Explorer Tree configuration -->
  	<context component="explorer-tree" parent="auto" merge-by="module">
     <n:explorer-tree xmlns:n="http://www.hybris.com/cockpitng/config/explorertree">
        <n:navigation-node id="hmc.group.sapintegration.name" merge-mode="append">
           <n:navigation-node id="hmc.cpq.productconfig">
              <n:type-node id="hmc.cpq.productconfig.sourcerules" code="ProductConfigSourceRule" />
           </n:navigation-node>
        </n:navigation-node>
     </n:explorer-tree>
  	</context>
  	
  	<context type="ProductConfigSourceRule">
  	   <context merge-by="type" parent="SourceRule" component="advanced-search">
			<advanced-search:advanced-search xmlns:advanced-search="http://www.hybris.com/cockpitng/config/advancedsearch">
				<advanced-search:field-list>
					
            </advanced-search:field-list>
			</advanced-search:advanced-search>
		</context>
		
		<context component="listviewactions" merge-by="type" parent="AbstractSourceRule">
	         <y:actions xmlns:y="http://www.hybris.com/cockpit/config/hybris">
	            <y:group qualifier="common">
					<y:action action-id="com.hybris.cockpitng.action.create" property="pageable.typeCode">
		               <y:parameter>
					  		<y:name>targetComponent</y:name>
					  		<y:value>editorArea</y:value>
					  	</y:parameter>
					  	<y:parameter>
					  		<y:name>initializeEntity</y:name>
					  		<y:value>true</y:value>
					  	</y:parameter>
	               </y:action>
					<y:action action-id="de.hybris.platform.sap.productconfig.rules.backoffice.action.rulecompileallproductconfigaction" property="pageable"/>
	            </y:group>
	         </y:actions>
    	</context>
    	
    	<context merge-by="type" parent="GenericItem" component="editorareaactions">
	        <y:actions xmlns:y="http://www.hybris.com/cockpit/config/hybris">
	           <y:group qualifier="common">
	           		<y:label>actiongroup.common</y:label>
	           		<y:action action-id="de.hybris.platform.ruleenginebackoffice.action.deletesourcerule" property="currentObject"/>
					   <y:action action-id="de.hybris.platform.ruleenginebackoffice.action.rulearchiveaction" property="currentObject"/>
					   <y:action action-id="de.hybris.platform.sap.productconfig.rules.backoffice.action.rulecloneproductconfigaction" property="currentObject"/>
	              	<y:action action-id="de.hybris.platform.ruleenginebackoffice.action.rulecompileaction" property="currentObject"/>
	           </y:group>
	        </y:actions>
    	</context>
	 
    	<context merge-by="type" parent="SourceRule" component="editor-area">
			<editorArea:editorArea xmlns:editorArea="http://www.hybris.com/cockpitng/component/editorArea">
				<editorArea:tab name="tab.configuration.abstractrule">
					<editorArea:section name="sec.configuration.abstractrule.others">
					   <editorArea:panel name="messageFiredPanel">
						      <editorArea:attribute xmlns="http://www.hybris.com/cockpitng/component/editorArea" 
						                            colspan="1" qualifier="messageSeverity" />
					   </editorArea:panel>
					</editorArea:section>
				</editorArea:tab>
			</editorArea:editorArea>
		</context>
  	</context>

</config>
